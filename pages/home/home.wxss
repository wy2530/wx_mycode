page {
  background-color: #f1f1f1;
}
swiper {
  width: 100%;
  height: calc(100vw*279/500);
}
image {
  width: 100%;
}
.nav {
  margin: 20rpx 3rpx;
  background-color: #fff;
}
.nav .magic_nav {
  display: flex;
  flex-wrap: wrap;
}
.nav .magic_nav .nav_icon {
  width: 47%;
  margin: 10rpx;
  position: relative;
}
.nav .magic_nav .nav_icon navigator {
  width: 100%;
}
.nav .magic_nav .nav_icon image {
  border-radius: 10rpx;
}
.nav .magic_nav .nav_icon .nav_title {
  position: absolute;
  left: 30rpx;
  top: 28rpx;
  font-size: 36rpx;
  color: #fff;
}
.nav .magic_nav .nav_icon .nav_title2 {
  position: absolute;
  left: 30rpx;
  bottom: 33rpx;
  font-size: 24rpx;
  color: #fff;
}
.main_title {
  display: flex;
  flex-direction: column;
  margin-top: 32rpx;
  background-color: #fff;
}
.main_title .sub_title {
  flex: 1;
  margin-bottom: 60rpx;
}
.main_title .sub_title .sub_title1 {
  font-size: 60rpx;
  padding-right: 40rpx;
  margin-bottom: 32rpx;
  color: #2A2D6D;
  text-align: center;
  font-weight: bold;
}
.main_title .sub_title .sub_title2 {
  font-size: 30rpx;
  color: #8E90B2;
  text-align: center;
}
.main_title .main_pro {
  display: flex;
  border: 1rpx solid #f1f1f1;
  box-shadow: 0rpx 1rpx 20rpx 2rpx rgba(1, 1, 1, 0.1);
  padding: 20rpx 32rpx;
  margin-right: 45rpx;
  margin-left: 45rpx;
}
.main_title .main_pro .left {
  flex: 3;
  display: flex;
  flex-direction: column;
}
.main_title .main_pro .left .left_top {
  flex: 2;
  display: flex;
  justify-content: space-between;
}
.main_title .main_pro .left .left_top .num {
  flex: 2;
  font-size: 45rpx;
  text-align: center;
  align-items: center;
  color: #fff;
  width: 53rpx;
  height: 58rpx;
  background-color: #DE443A;
  border-radius: 30rpx  30rpx 0rpx 30rpx;
}
.main_title .main_pro .left .left_top .num_title {
  flex: 3;
  font-size: 37rpx;
  font-weight: 550;
  text-align: center;
  align-items: center;
}
.main_title .main_pro .left .left_bottom {
  flex: 3;
}
.main_title .main_pro .left .left_bottom .icon {
  border: 1rpx solid #DE443A;
  background-color: #DE443A;
  border-radius: 50%;
  display: inline;
  margin: 3rpx 17rpx;
}
.main_title .main_pro .right {
  flex: 2;
}
.ours {
  display: flex;
  flex-direction: column;
  padding: 30rpx 45rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
  position: relative;
}
.ours .ours_title {
  flex: 2;
  position: absolute;
  padding-left: 16rpx;
  left: 20rpx;
  top: 35rpx;
  font-size: 45rpx;
  font-family: 'microsoft yahei';
  border-left: 10rpx solid #DE443A;
  border-radius: 5rpx;
}
.ours .ours_content {
  flex: 6;
  font-size: 32rpx;
  align-items: center;
  margin-top:30rpx;
  margin-bottom:30rpx;
}
